{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "waitFor": "onCreateCommand",
  "updateContentCommand": "npm install",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "npm start"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "src/pages/ConsolePage.tsx",
        "src/utils/conversation_config.js"
      ]
    }
  },
  "portsAttributes": {
    "3000": {
      "label": "Application"
    },
    "8081": {
      "label": "Server"
    }
  },
  "forwardPorts": [3000,8081]
}
